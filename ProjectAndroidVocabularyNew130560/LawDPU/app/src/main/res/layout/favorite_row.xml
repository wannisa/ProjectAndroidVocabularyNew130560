<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_margin="3dp"
    card_view:cardCornerRadius="1dp"
    card_view:cardElevation="1dp"
    card_view:cardUseCompatPadding="true">
    <!-- cardUseCompatPadding ใช้เว้นระยะห่างแต่ละอัน -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <!--android:text="Citizen ID"-->

        <TextView
            android:id="@+id/student_name_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:maxLines="3"
            android:padding="8dp"
            android:text="Name"
            android:textColor="#222"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/activity_name_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:maxLines="3"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:text="Academic Year"
            android:textColor="#222"
            android:textSize="15dp" />

        <ImageButton
            android:id="@+id/staron"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:background="#FFFFFF"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <ImageButton
            android:id="@+id/staroof"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/staron"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/staron"
            android:layout_marginTop="10dp"
            android:background="#FFFFFF"
            android:visibility="invisible"
            app:srcCompat="@android:drawable/btn_star_big_on" />


    </RelativeLayout>

</android.support.v7.widget.CardView>

